<apex:page standardController="Quote" extensions="SolM_QuoteController" showHeader="true" sidebar="false">
    <apex:form >
        <apex:pageBlock title="Email Quote PDF">
            <apex:pageBlockSection columns="1">
                <apex:inputText value="{!toAddress}" label="To (comma-separated emails)" />
                <apex:inputText value="{!subject}" label="Subject" />
                <apex:inputTextarea value="{!body}" label="Body" rows="10" style="width:100%;" />

                <apex:outputText value="Attached File:" />
                <apex:outputLink value="/sfc/servlet.shepherd/document/download/{!contentDocumentId}" target="_blank">
                    Download PDF
                </apex:outputLink>
            </apex:pageBlockSection>

            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="Send Email" action="{!sendEmailFromVF}" />
                <apex:commandButton value="Cancel" action="{!cancel}" immediate="true" />
            </apex:pageBlockButtons>

            <apex:pageBlockSection >
                <apex:messages />
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>